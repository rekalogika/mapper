<?xml version="1.0"?>
<psalm
        errorLevel="1"
        resolveFromConfigFile="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
        findUnusedBaselineEntry="true"
        findUnusedCode="false">

    <projectFiles>
        <directory name="src" />
        <directory name="config" />
        <directory name="tests/src" />
        <directory name="tests/config" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin" />
    </plugins>

    <issueHandlers>
        <MixedArrayOffset>
            <errorLevel type="suppress">
                <file name="src/Transformer/Implementation/TraversableToArrayAccessTransformer.php" />
            </errorLevel>
        </MixedArrayOffset>
        <MixedAssignment>
            <errorLevel type="suppress">
                <file name="src/Transformer/Implementation/TraversableToArrayAccessTransformer.php" />
                <file name="tests/src/Fixtures/Magic/ObjectWithMagicSet.php" />
            </errorLevel>
        </MixedAssignment>
        <PossiblyInvalidArgument>
            <errorLevel type="suppress">
                <file name="tests/src/IntegrationTest/MappingTest.php" />
            </errorLevel>
        </PossiblyInvalidArgument>
        <InvalidReturnStatement>
            <errorLevel type="suppress">
                <file name="src/Context/Context.php" />
            </errorLevel>
        </InvalidReturnStatement>
        <InvalidReturnType>
            <errorLevel type="suppress">
                <file name="src/Context/Context.php" />
            </errorLevel>
        </InvalidReturnType>
        <MissingConstructor>
            <errorLevel type="suppress">
                <file name="tests/src/Fixtures/AccessMethods/ObjectWithVariousAccessMethods.php" />
                <file name="tests/src/Fixtures/UninitializedProperty/ObjectWithUninitializedProperty.php" />
                <file name="tests/src/Fixtures/UninitializedPropertyDto/FinalObjectWithUninitializedPropertyDto.php" />
                <file name="tests/src/Fixtures/UninitializedPropertyDto/ObjectWithUninitializedPropertyDto.php" />
                <file name="tests/src/Fixtures/ArrayLikeDto/ObjectWithNotNullArrayAccessPropertyDto.php" />
                <file name="tests/src/Fixtures/ArrayLikeDto/ObjectWithNotNullTraversablePropertyDto.php" />
                <file name="tests/src/Fixtures/DynamicProperty/ObjectWithNonNullPropertyThatCannotBeCastFromNull.php" />
                <file name="tests/src/Fixtures/Magic/SomeDto.php" />
                <file name="tests/src/Fixtures/Magic/ObjectWithMagicSet.php" />
            </errorLevel>
        </MissingConstructor>
        <ArgumentTypeCoercion>
            <errorLevel type="suppress">
                <file name="src/DependencyInjection/RekalogikaMapperExtension.php" />
                <file name="tests/src/IntegrationTest/ObjectToObjectMetadataFactoryTest.php" />
            </errorLevel>
        </ArgumentTypeCoercion>
        <InternalMethod>
            <errorLevel type="suppress">
                <file name="src/Transformer/ObjectToObjectMetadata/Implementation/ObjectToObjectMetadataFactory.php" />
                <file name="src/Util/ClassUtil.php" />
                <file name="src/Transformer/ObjectToObjectMetadata/Implementation/Util/PropertyMetadataFactory.php" />
                <file name="src/Transformer/ObjectToObjectMetadata/Implementation/Util/PropertyPathMetadataFactory.php" />
                <file name="src/Transformer/ObjectToObjectMetadata/Implementation/Util/ClassMetadataFactory.php" />
            </errorLevel>
        </InternalMethod>
        <InternalClass>
            <errorLevel type="suppress">
                <file name="src/Transformer/ObjectToObjectMetadata/Implementation/ObjectToObjectMetadataFactory.php" />
                <file name="src/Util/ClassUtil.php" />
                <file name="src/Transformer/ObjectToObjectMetadata/Implementation/Util/PropertyMetadataFactory.php" />
                <file name="src/Transformer/ObjectToObjectMetadata/Implementation/Util/PropertyPathMetadataFactory.php" />
                <file name="src/Transformer/ObjectToObjectMetadata/Implementation/Util/ClassMetadataFactory.php" />
            </errorLevel>
        </InternalClass>
        <UndefinedClass>
            <errorLevel type="suppress">
                <file name="tests/src/IntegrationTest/ObjectToObjectMetadataFactoryTest.php" />
            </errorLevel>
        </UndefinedClass>
        <MissingParamType>
            <errorLevel type="suppress">
                <file name="tests/src/Fixtures/MixedType/ObjectWithUntypedPropertyDto.php" />
            </errorLevel>
        </MissingParamType>
        <MissingPropertyType>
            <errorLevel type="suppress">
                <file name="tests/src/Fixtures/MixedType/ObjectWithUntypedPropertyDto.php" />
                <file name="tests/src/IntegrationTest/MixedTypeTest.php" />
            </errorLevel>
        </MissingPropertyType>
        <DeprecatedClass>
            <errorLevel type="suppress">
                <file name="config/services.php" />
                <file name="src/MapperFactory.php" />
                <file name="src/Transformer/MainTransformerAwareTrait.php" />
                <file name="src/Transformer/Implementation/ClassMethodTransformer.php" />
                <file name="tests/src/IntegrationTest/MethodMapperTest.php" />
                <file name="src/Transformer/Implementation/ArrayToObjectTransformer.php" />
                <file name="src/Transformer/Implementation/ObjectToArrayTransformer.php" />
                <file name="src/Serializer/AbstractSerializerContext.php" />
                <file name="src/Serializer/DenormalizerContext.php" />
                <file name="src/Serializer/NormalizerContext.php" />
            </errorLevel>
        </DeprecatedClass>
    </issueHandlers>
</psalm>
